{
    "SERVICE_DEFINITION": {
        "enable": true,
        "name": "prometheus-selatam-helm",
        "type": "helm",
        "artifacts": {
            "helm": true
        },
        "variables": [
            {
                "type": "String",
                "name": "NAMESPACE",
                "value": "default",
                "required": false
            },
            {
                "type": "String",
                "name": "EXPOSE",
                "value": "true",
                "required": false
            },
            {
                "type": "String",
                "name": "EXPOSE_CMD",
                "value": "-n <+serviceVariables.NAMESPACE> r-<+<+<+service.name>.replace('_','')>.replace(' ','')>-server --type=NodePort --name=prometheus-service",
                "required": false
            }
        ],
        "CONNECTORS": {
            "helm_connector_id": "prometheus-helm"
        },
        "MANIFESTS": {
            "helm": {
                "type": "HelmChart",
                "chartName": "prometheus",
                "chartVersion": "24.3.0",
                "helmVersion": "V3",
                "commandFlags": {
                    "Upgrade": {
                        "flag": "--install prometheus prometheus-community/prometheus -namespace <+serviceVariables.NAMESPACE>"
                    }
                }
            }
        }
    }
}